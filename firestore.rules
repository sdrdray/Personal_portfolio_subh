rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read and write to the contactMessages collection
    match /contactMessages/{documentId} {
      // Allow creation of new contact messages but not reading/updating/deleting
      allow create: if true;
      allow read, update, delete: if false;
    }
    
    // Default rule - deny access to any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}